
@{
    ViewBag.Title = "限時活動內容";
}

<link href="../../Content/css/activity.css" rel="stylesheet" type="text/css" />

<div class="banner" style="background-image: url('../../Content/images/background/activity.png'); ">
</div>

<!-- 限時活動內容區塊 -->
<div class="container-fluid d-flex justify-content-center">
    <div class="row d-flex justify-content-center col-lg-12">
        <!-- 編輯、刪除 按鈕-->
        <div class="col-12">
            <div class="dropdown float-right">
                <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-h"></i>
                </button>
                <div class="dropdown-menu dropdown-menu-right dotMenu " aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="/Activity/Update">編輯</a>
                    <a class="dropdown-item" onclick="">刪除</a>
                </div>
            </div>
        </div>

        <!-- 內容 -->
        <div class="col-lg-8">
            <div class="activity">
                <div class="title">
                    <h4 style="font-weight: bold;"> 文章標題 </h4>
                    <a class="dateTime" style="color: #6c757d;"> · 截止日 2020/03/23 </a>
                    <hr>

                </div>

                <div class="content">
                    <p>
                        文章內容
                    </p>
                </div>
                <div class="tagDiv col-lg-12 ">
                    <button type="button" class="btn tag"> TAG名稱 </button>
                </div>
            </div>
            <hr>
            <hr>

            <!-- 所有留言顯示區塊 -->
            <h5 style="font-weight: bold;">回應</h5>
            <div class="response">
                <div class="info d-flex justify-content-between">
                    <div style="white-space:nowrap !important">
                        <a class="name"> 會員姓名 </a>
                        <a class="dateTime"> · 留言時間2020/03/23 </a>
                    </div>

                    <div class="dropdown ml-auto float-right">
                        <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-h"></i>
                        </button>

                        <!-- 編輯、刪除 留言按鈕-->
                        <div class="dropdown-menu dotMenu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item editReply" href="/Activity/UpdateReply">編輯</a>
                            <a class="dropdown-item" href="#/" onclick="">刪除</a>
                        </div>
                    </div>
                </div>
                留言內容
            </div>

            <!-- 留言區塊 -->
            <div class="replying">
                <div class="replyInput" id="replyInput" contenteditable="true" role="textbox" data-text="快來參與活動吧！">
                </div>
                <label class="btn btn-dark col-lg-2" style="cursor: pointer">
                    <input id="file-selector" type="file" multiple="multiple" accept=".jpg,.png,.gif,.tif,.bmp" />
                    <i class="fas fa-images" style="padding-right:5px"></i>加圖片
                </label>

                <button type="submit" class="btn btn-danger float-right submitReplyButton col-lg-2 shadow-none"
                        onclick="">
                    提交
                </button>
            </div>
            <div style="margin-bottom: 5em"></div>
        </div>
    </div>
</div>
<!-- 限時活動內容結束 -->

<a href="#" id="gotop">
    <i class="fa fa-angle-up"></i>
</a>

<div class='coverContainer'>
    <div class='loader'>
        <div class='loader--dot'></div>
        <div class='loader--dot'></div>
        <div class='loader--dot'></div>
        <div class='loader--dot'></div>
        <div class='loader--dot'></div>
        <div class='loader--dot'></div>
        <div class='loader--text'></div>
    </div>
</div>